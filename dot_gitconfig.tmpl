# This is Git's per-user configuration file.
[user]
  name = Tom Forbes
  email = {{ .email | quote }}
  signingKey = {{ template "ssh_pub" . | quote }}

#[gpg]
#  format = ssh

#[gpg "ssh"]
#  allowedSignersFile = {{ joinPath .chezmoi.homeDir ".config/git/allowed_signers" | quote}}

[commit]
  gpgsign = true

[tag]
  gpgsign = true

[core]
  excludesfile = /Users/tom/.gitignore
  autocrlf = input
  fsmonitor = /Users/tom/.config/git/watchman.pl

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f

[push]
  default = current

[pull]
  rebase = false

[init]
  defaultBranch = master
