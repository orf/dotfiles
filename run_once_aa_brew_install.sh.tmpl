#!/bin/zsh
set -eu -o pipefail
set -o xtrace

# Brewfile hash: {{ include "Brewfile" | sha256sum }} {{ includeTemplate "Brewfile.cask.tmpl" . | sha256sum }}

brew tap "derailed/k9s"

temp=$(mktemp)

cat {{ joinPath .chezmoi.sourceDir "Brewfile" | quote }} > "$temp"

if [[ ! -v CI ]]; then
  echo {{ includeTemplate "Brewfile.cask.tmpl" . | quote }} >> "$temp"
fi

if [[ -v CI ]]; then
  deps=$(mktemp)
  all_deps=$(mktemp)
  brew bundle list --file=Brewfile > "${deps}"
  # shellcheck disable=SC2046
  brew deps -n --union --full-name $(cat "$deps") > "${all_deps}"

  cat "${deps}" "${all_deps}" | sort | uniq | xargs -P20 -n10 brew fetch --retry -q | grep -v 'SHA256: '
fi

HOMEBREW_NO_INSTALL_CLEANUP=1 HOMEBREW_NO_AUTO_UPDATE=1 brew bundle --verbose --no-lock --no-upgrade --file="$temp"
